<div class="form-group <%- locals.col %> <%- locals.visible==false?'hidden':'' %>">
	<label class="m-0 p-0 <%- locals.required?'form-required':''%>"><%- locals.title || locals.label || '' %><%- helpButton(locals) %></label>
	<textarea class="form-control <%- locals.class %>" id="<%-locals.id%>" name="<%-locals.name%>"  rows="<%- locals.rows || 10 %>"  placeholder="<%- locals.placeholder || locals.title || locals.label %>" <%- locals.required?'required="required"':'' %> <%- locals.readonly==true?'readonly':'' %> onchange="<%- locals.onchange %> value="<%- locals.value %>"></textarea>
</div>

