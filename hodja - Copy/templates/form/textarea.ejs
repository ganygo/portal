<div class="form-group <%- locals.col %> <%- locals.visible==false?'hidden':'' %>">
	<label class="m-0 p-0"><%- locals.title || locals.label || '' %></label>
	<textarea class="form-control <%- locals.class %>" id="<%-locals.id%>" name="<%-locals.name%>"  rows="<%- locals.rows || 4 %>"  placeholder="<%- locals.placeholder || locals.title || locals.label %>" <%- locals.required?'required="required"':'' %> <%- locals.readonly==true?'readonly':'' %> onchange="<%- locals.onchange %> value="<%- locals.value %>"></textarea>
</div>

