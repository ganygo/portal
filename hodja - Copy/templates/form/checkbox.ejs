<div class="form-group <%- locals.col%> <%- !locals.visible?'hidden':''%>">
	<label>
		<span class="mb-1" style="display:block;"><%- locals.title%></span>
		<input type="checkbox" class="form-checkbox" id="<%- locals.id %>" name="<%- locals.name %>" value="true" <%- (locals.value?'checked':'')%> <%- locals.readonly==true?'disabled':''%> <%- locals.onchange?'onchange="' + locals.onchange + '"':''%> />
		<input type="hidden" id="<%- locals.id %>-hidden" name="<%- locals.name %>" value="false" />
	</label>
</div>
