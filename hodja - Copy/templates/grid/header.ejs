<thead>
	<tr class="text-nowrap">
		<%- locals.options.selection?`<th style="width: 30px;"><input class="grid-checkbox" type="checkbox" value="true" name="selectAll" id="selectAll" title="Tümünü seç"></th>`:``%>
		<% Object.keys(locals.fields).forEach((key)=>{
			var field=locals.fields[key]
			if((field.visible==undefined?true:field.visible)){

				var cls=''
				switch(locals.fields[key].type ){
					case 'money':
					case 'number':
					cls='text-right mr-1'
					break
					case 'boolean':
					cls='text-center'
					break
				}
				%>
				<th class="<%-cls %>" style="<%- field.width?'width:' + field.width:''%>"><%- field.icon?'<i class="' + field.icon + '"></i>':''%> <%- field.title || '' %></th>
				<%
			}
		})
		%>
		<th class="text-center" style="width:<%- locals.options.buttonWidth %>">
			<%// !locals.options.insideForm?(locals.options.buttons.add[0]==true?locals.options.buttons.add[1]:''):''%>
			<%- locals.options.buttons.add[0]==true?locals.options.buttons.add[1]:'' %>
		</th>
	</tr>
	<%- builder.control('grid/header_filter',locals) %>

</thead>