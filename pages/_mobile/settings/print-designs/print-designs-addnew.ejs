<%layout('../../_common/layouts/general')%>
<%- partial('../../_common/forms/form',{
    formControls:{
        module      :{caption:'Modül',          type:'lookup',  lookup:printDesignModuleList, required:true},
        name        :{caption:'Adı',            type:'textbox', required:true},
        isDefault   :{caption:'Varsayılan',     type:'checkbox' },
        design      :{caption:'Tasarım(EJS/html)',        type:'textarea', rows:30  },
        passive     :{caption:'Pasif',          type:'checkbox'}
    },
    action:'',
    mode:'addnew'
    }) 
%>

<script type="text/javascript">

    $(document).ready(function(){
        var urlParams=getAllUrlParams();
        if(urlParams.module!=undefined){
            $("select[name='module']").val(urlParams.module);
        }
        $("select[name='module']").on('change',function(){
            window.location.href='<%=urlPath%>?db=<%=db%>&sid=<%=sid%>&module=' + $("select[name='module']").val();
        });
    })
</script>