<%
    switch(form.itemType){
        case 'raw-material':
            title='Hammaddeler';
        break;
        case 'helper-material':
            title='Yardımcı Malzemeler';
        break;
        case 'product':
            title='Mamul ve Yarı Mamuller';
        break;
        case 'asset':
            title='Demirbaş';
        break;
        case 'sales-service':
            title='Satılan hizmetler';
        break;
        case 'purchasing-service':
            title='Alınan hizmetler';
        break;
        default:
            title='Envanter';
        break;
    }

%>
<%layout('../../_common/layouts/general')%>
<% 
    var frmControl1={
        name:{ name:'name.value', caption:'Adı', type:'textbox'    ,required:true},
        description:{ name:'description.value', caption:'Açıklama', type:'textbox'},
        brandName:{ name:'brandName.value', caption:'Marka', type:'textbox'},
        modelName:{ name:'modelName.value', caption:'Model', type:'textbox'},
        itemClassificationCode:{ name:'commodityClassification.0.itemClassificationCode.value', caption:'Sınıf kodu (GTIPNO)', type:'textbox'},
        buyersItemIdentification:{ name:'buyersItemIdentification.ID.value', caption:'Alıcı kodu', type:'textbox'},
        sellersItemIdentification:{ name:'sellersItemIdentification.ID.value', caption:'Satıcı kodu', type:'textbox'},
        manufacturersItemIdentification:{ name:'manufacturersItemIdentification.ID.value', caption:'Üretici kodu', type:'textbox'},
        originCountry:{ name:'originCountry.name.value', caption:'Menşei', type:'textbox'},
        keyword:{ name:'keyword.value', caption:'Anahtar kelime', type:'textbox'},
        accountGroup:{ name:'accountGroup', caption:'Muhasebe Grubu', type:'lookup', lookup:accountGroupList, textField:'name',valueField:'_id'},
        
        tags:{ name:'tags', caption:'Etiketler (virgulle ayrılmış)', type:'textbox'},
        tracking1  :{caption:'Stok/Envanter Takibi',  type:'label',   
            formControls:{
                lotNo:{name:'tracking.lotNo', caption:'Lot No?', type:'checkbox'    },
                serialNo:{name:'tracking.serialNo', caption:'Seri No?', type:'checkbox'    },
                color:{name:'tracking.color', caption:'Renk?', type:'checkbox'    },
                pattern:{name:'tracking.pattern', caption:'Desen?', type:'checkbox'    },
                size:{name:'tracking.size', caption:'Beden?', type:'checkbox'    }
            }
        },
        passive:{caption:'Pasif?', type:'checkbox'    }
    }

    if(form.itemType=='helper-material'){
        frmControl1['exceptInventory']={name:'exceptInventory', caption:'Envanter/Stok tutulmasın', type:'checkbox'    }
        frmControl1['exceptRecipeCalculation']={name:'exceptRecipeCalculation', caption:'Recete hesaplarina dahil edilmesin', type:'checkbox'    }
    }
%>
<%- partial('../../_common/forms/form', {
    tabs:[
       {
            caption:'Bilgiler',
            formControls:frmControl1
        },
        {
            caption:'Birimler/Barkodlar',
            formControls:{
                unitPacks:{ name:'unitPacks', caption:'Birimler', type:'partial' ,partial:'../components/unitpacks.ejs'},
                barkodlar:{ name:'barkodlar', caption:'Barkodlar (Carpanlari ";" ile barkod sonuna ekleyiniz)', type:'textarea' , rows:5}
            }
        },
        {
            caption:'Resimler/dosyalar',
            formControls:{
                image0  :{name:'images.0', caption:'Resim 1',     type:'fileBase64Image'   },
                image1  :{name:'images.1', caption:'Resim 2',     type:'fileBase64Image'   },
                image2  :{name:'images.2', caption:'Resim 3',     type:'fileBase64Image'   },
                file0  :{name:'files.0', caption:'Dosya/dokuman 1',     type:'fileBase64'   },
                file1  :{name:'files.1', caption:'Dosya/dokuman 2',     type:'fileBase64'   },
                file2  :{name:'files.2', caption:'Dosya/dokuman 3',     type:'fileBase64'   }
            }
        },
        {
            caption:'Makina Tanımları',
            partial:'../../inventory/items/product-machines.ejs'
        }
    ],
    action:'',
    mode:'addnew'
    }) 
