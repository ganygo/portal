<%layout('../../_common/layouts/general')%>
<%- partial('../../_common/components/grid2',{
    fields:[
        {field:'name',title:'Adı/Kodu',type:'string' , filter:true, orderable:true},
        {field:'description',title:'Açıklama',type:'string' , filter:true, orderable:true},
        {field:'width',title:'En',type:'string' , filter:true, orderable:true},
        {field:'length',title:'Boy',type:'string' , filter:true, orderable:true},
        {field:'height',title:'Yukseklik',type:'string' , filter:true, orderable:true},
        {field:'weight',title:'Gramaj/Ağırlık',type:'string' , filter:true, orderable:true},
        {field:'maxWeight',title:'Max Kg',type:'string' , filter:true, orderable:true},
        {field:'passive',title:'Pasif',type:'boolean', filter:true, width:'120px', orderable:true}
    ],
    title:'Palet Listesi',
    addNewButton:true,
    editButton:true,
    deleteButton:true,
    viewButton:true,
    deleteUrl:`/dbapi/packing-types/{_id}?sid=${sid}`,
    customButtons:[
        {inline:true, href:`javascript:itemCopyConfirm('{_id}','{name}')`, title:'Kopyala',icon:'far fa-copy'}
    ]
    }) 
%>

<%- partial('../../_common/forms/modal',{
    modalId:'itemCopyModal',
    title:'Kopya',
    controls:{
        newName:{title:'Yeni Palet isim/kod/numara', type:'string', default:''}
    },
    mode:'addnew',
    buttons:[
        {isCancelButton:true},
        {href:'javascript:itemCopySave()', title:'Kopyala',  title:'Kopyala',icon:'far fa-copy', class:'btn btn-primary'}
    ]
}) %>

<script type="text/javascript">
    var temp_id, temp_name;
    function itemCopyConfirm(id, name){
        temp_id=id;
        temp_name=name;
        $('#newName').val(incString(name));
        $('#itemCopyModal').modal('show');
    }

    function itemCopySave(){
        if($('#newName').val().trim()==''){
            alert('Isim bos olamaz');
            return;
        }
        $('#itemCopyModal').modal('hide');

        var data={id:temp_id, newName:$('#newName').val()}
        $.ajax({
            url:`/dbapi/packing-types/copy?sid=${q.sid}`,
            data:data,
            type:'POST',
            success:function(result){
                if(result.success){
                    window.location.reload();
                }else{
                    $('#itemCopyModal').modal('show');
                    alert(result.error.code + ' - ' + result.error.message);
                }
            }
        });
       
    }
</script>