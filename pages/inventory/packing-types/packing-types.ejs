<%layout('../../_common/layouts/general')%>
<%- partial('../../_common/components/grid2',{
    fields:[
        {name:'name',text:'Adı/Kodu',type:'label' , filter:true, orderable:true},
        {name:'description',text:'Açıklama',type:'label' , filter:true, orderable:true},
        {name:'width',text:'En',type:'label' , filter:true, orderable:true},
        {name:'length',text:'Boy',type:'label' , filter:true, orderable:true},
        {name:'height',text:'Yukseklik',type:'label' , filter:true, orderable:true},
        {name:'weight',text:'Gramaj/Ağırlık',type:'label' , filter:true, orderable:true},
        {name:'maxWeight',text:'Max Kg',type:'label' , filter:true, orderable:true},
        {name:'passive',text:'Pasif',type:'checkbox', filter:true, width:'120px', orderable:true}
    ],
    caption:'Palet Listesi',
    addNewButton:true,
    editButton:true,
    deleteButton:true,
    viewButton:true,
    deleteUrl:`/dbapi/packing-types/{_id}?sid=${sid}`,
    customButtons:[
        {inline:true, href:`javascript:itemCopyConfirm('{_id}','{name}')`, title:'Kopyala',icon:'far fa-copy'}
    ]
    }) 
%>

<%- partial('../../_common/forms/modal',{
    modalId:'itemCopyModal',
    caption:'Kopya',
    formControls:{
        newName:{caption:'Yeni Palet isim/kod/numara', type:'textbox', default:''}
    },
    mode:'addnew',
    buttons:[
        {isCancelButton:true},
        {href:'javascript:itemCopySave()', title:'Kopyala',  text:'Kopyala',icon:'far fa-copy', class:'btn btn-primary'}
    ]
}) %>

<script type="text/javascript">
    var temp_id, temp_name;
    function itemCopyConfirm(id, name){
        temp_id=id;
        temp_name=name;
        $('#newName').val(incString(name));
        $('#itemCopyModal').modal('show');
    }

    function itemCopySave(){
        if($('#newName').val().trim()==''){
            alert('Isim bos olamaz');
            return;
        }
        $('#itemCopyModal').modal('hide');

        var data={id:temp_id, newName:$('#newName').val()}
        $.ajax({
            url:`/dbapi/packing-types/copy?sid=${q.sid}`,
            data:data,
            type:'POST',
            success:function(result){
                if(result.success){
                    window.location.reload();
                }else{
                    $('#itemCopyModal').modal('show');
                    alert(result.error.code + ' - ' + result.error.message);
                }
            }
        });
       
    }
</script>