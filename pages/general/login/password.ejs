<% layout('../../_common/layouts/login-layout') %>
<div class="container mb-4">
	<div class="row justify-content-center">
		<div class="col-lg-5">
			<div id="loginPanel" class="card shadow-lg border-0 rounded-lg mt-5">
				<div class="card-header"><div class="text-center login-title text-primary"><i class="fas fa-sign-in-alt mr-1"></i> {{Parolamı unuttum}}</div></div>
				<div class="card-body">
					<%- formError(message) %>
					<form action="" method="POST" role="form" name="form1" id="form1" autocomplete="off">
						<div class="form-group">
							<label class="mb-1" for="username">{{Kullanıcı adı}}</label>
							<input class="form-control" id="username"  name="username" type="text" placeholder="{{E-mail veya telefon}}" value="<%=form.username%>" />
						</div>
						
						
						<div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
							
							<input class="btn btn-primary" type="submit" value="{{Parolami gonder}}">
							<a href="/general/login" class="btn btn-dark" title="Vazgeç"><i class="fas fa-reply"></i></a>
							
						</div>
					</form>
					
				</div>
				<div class="card-footer text-center">
					<div class=""><a href="/general/login/signup">{{Üye ol!}}</a></div>
				</div>
			</div>
		</div>
	</div>
</div>


