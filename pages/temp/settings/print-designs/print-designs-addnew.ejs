<%layout('../../_common/layouts/general')%>
<%- formBuilder.generateForm({
    controls:{
        module      :{title:'Modül',          type:'lookup',  lookup:printDesignModuleList, required:true},
        name        :{title:'Adı',            type:'string', required:true},
        isDefault   :{title:'Varsayılan',     type:'boolean' },
        design      :{title:'Tasarım(EJS/html)',        type:'textarea', rows:30  },
        passive     :{title:'Pasif',          type:'boolean'}
    },
    
    mode:'addnew'
    }) 
%>

<script type="text/javascript">

    $(document).ready(function(){
        var urlParams=getAllUrlParams();
        if(urlParams.module!=undefined){
            $("select[name='module']").val(urlParams.module);
        }
        $("select[name='module']").on('change',function(){
            window.location.href='<%=urlPath%>?sid=<%=sid%>&module=' + $("select[name='module']").val();
        });
    })
</script>