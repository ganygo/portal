<%
    switch(form.itemType){
        case 'raw-material':
            title='Hammaddeler';
        break;
        case 'helper-material':
            title='Yardımcı Malzemeler';
        break;
        case 'product':
            title='Mamul ve Yarı Mamuller';
        break;
        case 'asset':
            title='Demirbaş';
        break;
        case 'sales-service':
            title='Satılan hizmetler';
        break;
        case 'purchasing-service':
            title='Alınan hizmetler';
        break;
        default:
            title='Envanter';
        break;
    }

%>
<%layout('../../_common/layouts/general')%>
<% 
    var frmControl1={
        name:{ name:'name.value', title:'Adı', type:'string'    ,required:true},
        description:{ name:'description.value', title:'Açıklama', type:'string'},
        brandName:{ name:'brandName.value', title:'Marka', type:'string'},
        modelName:{ name:'modelName.value', title:'Model', type:'string'},
        itemClassificationCode:{ name:'commodityClassification.0.itemClassificationCode.value', title:'Sınıf kodu (GTIPNO)', type:'string'},
        buyersItemIdentification:{ name:'buyersItemIdentification.ID.value', title:'Alıcı kodu', type:'string'},
        sellersItemIdentification:{ name:'sellersItemIdentification.ID.value', title:'Satıcı kodu', type:'string'},
        manufacturersItemIdentification:{ name:'manufacturersItemIdentification.ID.value', title:'Üretici kodu', type:'string'},
        originCountry:{ name:'originCountry.name.value', title:'Menşei', type:'string'},
        keyword:{ name:'keyword.value', title:'Anahtar kelime', type:'string'},
        accountGroup:{ name:'accountGroup', title:'Muhasebe Grubu', type:'lookup', lookup:accountGroupList, textField:'name',valueField:'_id'},
        
        tags:{ name:'tags', title:'Etiketler (virgulle ayrılmış)', type:'string'},
        tracking1  :{title:'Stok/Envanter Takibi',  type:'string',   
            controls:{
                lotNo:{field:'tracking.lotNo', title:'Lot No?', type:'boolean'    },
                serialNo:{field:'tracking.serialNo', title:'Seri No?', type:'boolean'    },
                color:{field:'tracking.color', title:'Renk?', type:'boolean'    },
                pattern:{field:'tracking.pattern', title:'Desen?', type:'boolean'    },
                size:{field:'tracking.size', title:'Beden?', type:'boolean'    }
            }
        },
        passive:{title:'Pasif?', type:'boolean'    }
    }

    if(form.itemType=='helper-material'){
        frmControl1['exceptInventory']={field:'exceptInventory', title:'Envanter/Stok tutulmasın', type:'boolean'    }
        frmControl1['exceptRecipeCalculation']={field:'exceptRecipeCalculation', title:'Recete hesaplarina dahil edilmesin', type:'boolean'    }
    }
%>
<%- formBuilder.generateForm( {
    tabs:[
       {
            title:'Bilgiler',
            formControls:frmControl1
        },
        {
            title:'Birimler/Barkodlar',
            controls:{
                unitPacks:{ name:'unitPacks', title:'Birimler', type:'partial' ,partial:'../components/unitpacks.ejs'},
                barkodlar:{ name:'barkodlar', title:'Barkodlar (Carpanlari ";" ile barkod sonuna ekleyiniz)', type:'textarea' , rows:5}
            }
        },
        {
            title:'Resimler/dosyalar',
            controls:{
                image0  :{field:'images.0', title:'Resim 1',     type:'fileBase64Image'   },
                image1  :{field:'images.1', title:'Resim 2',     type:'fileBase64Image'   },
                image2  :{field:'images.2', title:'Resim 3',     type:'fileBase64Image'   },
                file0  :{field:'files.0', title:'Dosya/dokuman 1',     type:'fileBase64'   },
                file1  :{field:'files.1', title:'Dosya/dokuman 2',     type:'fileBase64'   },
                file2  :{field:'files.2', title:'Dosya/dokuman 3',     type:'fileBase64'   }
            }
        },
        {
            title:'Makina Tanımları',
            partial:'../../inventory/items/product-machines.ejs'
        }
    ],
    
    mode:'addnew'
    }) 
%>


