<%layout('../../_common/layout')%>
<%- partial('../../_common/grid2',{
    fields:[
        {name:'accountCode',text:'Hesap Kodu',type:'label' , filter:true, orderable:true , align:'left', width:'35%'},
        {name:'name',text:'Hesap Ismi',type:'label' , filter:true, orderable:true}
    ],
    caption:'',
    addNewButton:true,
    editButton:true,
    deleteButton:true,
    customButtons:[
        {href:'javascript:copyConfirm("{_id}","{name}")', text:'Kopyala',icon:'far fa-copy'}
    ],
    deleteUrl:'/dbapi/accounts/{_id}?db=' + db + '&sid=' + sid
    }) 
%>


<%- partial('../../_common/modal',{
    modalId:'copyModal',
    caption:'Kopya',
    formControls:{
        newName:{caption:'Yeni isim', type:'textbox', default:''}
    },
    mode:'addnew',
    buttons:[
        {isCancelButton:true},
        {href:'javascript:copySave()', text:'Kopyala',icon:'far fa-copy', class:'btn btn-primary'}
    ]
}) %>

<script type="text/javascript">
    var temp_id, temp_name;
    function copyConfirm(id, name){
        temp_id=id;
        temp_name=name;
        $('#newName').val(name + ' kopya');
        $('#copyModal').modal('show');
    }

    function copySave(){
        if($('#newName').val().trim()==''){
            alert('Isim bos olamaz');
            return;
        }
        $('#copyModal').modal('hide');

        var data={id:temp_id, newName:$('#newName').val()}
        console.log('temp_id:',temp_id);
        console.log('data:',data);
        $.ajax({
            url:'/dbapi/accounts/copy?db=<%=db%>&sid=<%=sid%>',
            data:data,
            type:'POST',
            success:function(result){
                console.log('result:',result);
                if(result.success){
                    window.location.reload();
                }else{
                    $('#copyModal').modal('show');

                    alert(result.error.code + ' - ' + result.error.message);
                }
            }
        });
       
    }
</script>