<%- partial('../../_common/components/grid2',{
    fields:[
        {field:'itemType',title:'Turu',type:'lookup', lookup:productTypeList , filter:true, filterField:'itemType', orderable:true},
        {field:'name.value',title:'Adı',type:'string' , filter:true, filterField:'name', orderable:true},
        {field:'description.value',title:'Açıklama',type:'string' , filter:true, filterField:'description', orderable:true},
        {field:'accountGroup',title:'Muh.Grup',type:'lookup' ,lookup:accountGroupList, filter:true, textField:'name',valueField:'_id', orderable:true},
        {field:'tracking.lotNo',title:'Lot No?',type:'boolean',width:'100px', filter:true, orderable:true},
        {field:'tracking.serialNo',title:'Seri No?',type:'boolean',width:'100px', filter:true, orderable:true},
        {field:'tracking.color',title:'Renk?',type:'boolean',width:'100px', filter:true, orderable:true},
        {field:'tracking.pattern',title:'Desen?',type:'boolean',width:'100px', filter:true, orderable:true},
        {field:'tracking.size',title:'Beden?',type:'boolean',width:'100px', filter:true, orderable:true},
        {field:'passive',title:'Pasif',type:'boolean',width:1, filter:true, orderable:true}
    ],
    title:'',
    addNewButton:true,
    editButton:true,
    deleteButton:true,
    viewButton:true,
    customButtons:[
        {inline:true, href:`javascript:itemCopyConfirm('{_id}','{name.value}')`, title:'Kopyala',icon:'far fa-copy'}
    ],
    deleteUrl:`/dbapi/items/{_id}?sid=${sid}`
    }) 
%>


<%- partial('../../_common/forms/modal',{
    modalId:'itemCopyModal',
    title:'Kopya',
    controls:{
        newName:{title:'Yeni isim', type:'string', default:''}
    },
    mode:'addnew',
    buttons:[
        {isCancelButton:true},
        {href:'javascript:itemCopySave()', title:'Kopyala',  title:'Kopyala',icon:'far fa-copy', class:'btn btn-primary'}
    ]
}) %>
<script type="text/javascript">
    var temp_id, temp_name;
    function itemCopyConfirm(_id, name){
        temp_id=_id;
        temp_name=name;
        $('#newName').val(name + ' kopya');
        $('#itemCopyModal').modal('show');
    }

    function itemCopySave(){
        if($('#newName').val().trim()==''){
            alert('Isim bos olamaz');
            return;
        }
        $('#itemCopyModal').modal('hide');

        var data={id:temp_id, newName:$('#newName').val()}
        $.ajax({
            url:`/dbapi/items/copy?sid=${q.sid}`,
            data:data,
            type:'POST',
            success:function(result){
                if(result.success){
                    window.location.reload();
                }else{
                    $('#itemCopyModal').modal('show');
                    alert(result.error.code + ' - ' + result.error.message);
                }
            }
        });
       
    }
</script>